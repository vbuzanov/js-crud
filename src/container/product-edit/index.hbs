{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<main>
  <section>
    <div class="form">
      <h2 class="form__title">Редагування товару</h2>
      <div>
        <h6 class="form__info">Інформація про товар</h6>
        {{#with product}}
        <form action="/product-edit" method="POST">
          <div class="form__content">
            <div class="form__name">
              <div class="form__field">
                <label for="name" class="form__label">Назва товару</label>
                <input type="text" name="name" class="form__input" value="{{name}}">
              </div>
              <div class="form__field">
                <label for="price" class="form__label">Ціна</label>
                <input type="number" name="price" class="form__input" value="{{price}}">
              </div>
              <div class="form__field">
                <label for="id" class="form__label">ID</label>
                <input type="number" name="id" class="form__input" value="{{id}}">
              </div>
            </div>
            <div class="form__field">
              <label for="description" class="form__label">Короткий опи товару</label>
              <textarea name="description" id="description" cols="30" rows="2"
                class="form__input">{{description}}</textarea>
              <span>Відображується у картці товару</span>
            </div>
            <div class="form__buts">
              <div class="form__button">
                <button type="submit">Зберегти
                  оновлення</button>
              </div>

              <div class="form__button">
                <a class="form__a" href="/product-delete?id={{id}}">Видалити
                  товар</a>
              </div>

            </div>

          </div>
        </form>
        {{/with}}
      </div>

    </div>
  </section>

</main>



